<%content_for :title do "Cotação" end %>
<%content_for :head do%>
<%=stylesheet_link_tag "cotacao"%>
<%=javascript_include_tag "jquery.validate.min"%>
<%=javascript_include_tag "meusmetodos"%>
<%=javascript_include_tag "jquery.meio.mask"%>
<script>
/* Mascaras personalizadas */ 

$.mask.masks = $.extend($.mask.masks,{
    telefone_sp:{ mask: '(99) 99999-9999'},
        cnpj:{ mask: '99.999.999/9999-99'},


});
        (function($){

                $(function(){

                        $('input:text').setMask();

                        /* Personalização para celulares de SP*/

                        $('#telefone').keydown(function(event) {

                                // Act on the event

                                if($(this).val().substring(1,6) == '11) 9'){

                                        $(this).attr('alt','telefone_sp');

                                }else{

                                        $(this).attr('alt','phone');

                                }

                                $(this).setMask();

                        });

                });

        })($);

(function($){
                $(function(){
        $(".pavertech_name").bind('keyup blur', function(e){
            e.preventDefault();
             
            if(this.value.match(/[0-9]/g))
            {
                this.value = this.value.replace(/[0-9]/g,'');
            }
                        });
                });
$(function(){

    $('input:text').setMask();
        $('#nome').setMask('nome-pavertech');
        $('#ddd').setMask('ddd');
        $('#telefone').setMask('telefone');
        $('input[type="text"]').setMask();
    /* Personalização para celulares de SP*/

    $('#contact_phone,#contact_cellphone').keydown(function(event) {

    // Act on the event

    if($(this).val().substring(1,6) == '11) 9'){

        $(this).attr('alt','phone_sp');

    }else{

        $(this).attr('alt','phone');

    }

        $(this).setMask();

    });

});

})($);   
$('#cnpj').setMask("cnpj");
                $(document).ready(function(){           
        $('#new_quotation').validate({
        rules: {
            "quotation[name]": {
                required: true,
                minlength: 2
            },
                        "quotation[corp]": {
                required: true,
                minlength: 2
            },
                        "quotation[email]": {
                required: true,
                email: true
            },
                "quotation[phone]": {
                required: true,
            },
                "quotation[cnpj]": {
                required: true,
                                cnpj:true,
            },
                "quotation[rg]": {
                required: true,
            },
                "quotation[city]": {
            },
                "quotation[state]": {
                required: true,
            },                  
                        "quotation[password]":{
                                required:true,
                                minlength: 6
                        },                      
                        "quotation[password_confirmation]": {
                required: true,
                minlength: 6,
                                equalTo: "#contact_password"
            },
                        "quotation[message_confirmation]": {
                required: true,
                minlength: 6,
            }
                                                
                        
        },
        messages: {
            "quotation[name]":{
                                required: "Preencha o Nome da Empresa",
                                minlength:      "Mínimo de 2 caracteres"
                        },
            "quotation[corp]":{
                                required: "Preencha com o a Area de Atuação de sua Empresa",
                                minlength:      "Mínimo de 2 caracteres"
                        },                      
                        "quotation[city]":{
                                required: "Preencha a sua cidade",
                                minlength:      "Mínimo de 2 caracteres"
                        },
                        "quotation[email]":{
                                required: "Preencha o seu email",
                                email: "Informe um email válido"        
                        },
                        "quotation[password]":{
                                required: "Preencha com uma senha",
                                minlength: "Mínimo de 6 caracteres"     
                        },
                        "quotation[password_confirmation]":{
                                required: "Preencha com a confirmação",
                                minlength: "Mínimo de 6 caracteres",
                                equalTo: "Confirmação não é igual a senha"      
                        },
                        "quotation[message]":{
                                required: "Preencha com a confirmação",
                                minlength: "Escreva uma mensagem",
                        }                       
        }
    });
    
                        
                //placeholder crossbrowser
                $('.input[placeholder]').each(function(){
                var ph = $(this).attr('placeholder')
                $(this).val(ph).focus(function(){
                if($(this).val() == ph) $(this).val('')
                }).blur(function(){
                if(!$(this).val()) $(this).val(ph)
                })
                })      
});
</script>
<%end%>
